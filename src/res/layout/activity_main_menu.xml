<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    android:gravity="center"
    tools:context=".MainMenuActivity" >
    
    <Button 
        android:id="@+id/load_level_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_level_menu"
        android:textColor="@android:color/white"
        android:onClick="loadLevelInterface" />
    
    <Button 
        android:id="@+id/load_customize_level_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     	android:layout_marginTop="30dp"
        android:layout_below="@id/load_level_interface"
        android:textColor="@android:color/white"
        android:text="@string/customizer" 
        android:onClick="loadCustomizerInterface" />

</RelativeLayout>
