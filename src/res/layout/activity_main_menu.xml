<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    android:gravity="center"
    tools:context=".MainMenuActivity" >

    <Button
        android:id="@+id/load_customize_level_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:background="@drawable/android_button"
        android:onClick="loadCustomizerInterface"
        android:text="@string/customizer"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/load_level_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
      	android:layout_margin="30dp"
        android:layout_toLeftOf="@+id/load_customize_level_interface"
        android:background="@drawable/android_button"
        android:onClick="loadLevelInterface"
        android:text="@string/choose_level_menu"
        android:textColor="@android:color/white" />
    
     <Button
        android:id="@+id/load_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
      	android:layout_margin="30dp"
        android:layout_toRightOf="@+id/load_customize_level_interface"
        android:background="@drawable/android_button"
        android:onClick="loadSettings"
        android:text="Settings"
        android:textColor="@android:color/white" />

</RelativeLayout>
