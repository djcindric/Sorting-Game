<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    android:gravity="center"
    tools:context=".MainMenuActivity" >

    <Button
        android:id="@+id/load_customize_level_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="37dp"
        android:padding="10dp"
        android:background="@drawable/android_button"
        android:onClick="loadCustomizerInterface"
        android:text="@string/customizer"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/load_level_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/load_customize_level_interface"
        android:layout_marginLeft="35dp"
        android:background="@drawable/android_button"
        android:onClick="loadLevelInterface"
        android:text="@string/choose_level_menu"
        android:textColor="@android:color/white" 
        android:padding="10dp"/>

</RelativeLayout>
